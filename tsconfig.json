{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "outDir": "build",
//        "declarationDir": ".bin",
//        "declaration": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "allowUnreachableCode": false,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "node_modules/@types",
            "packages/core/node_modules/@types",
            "packages/express/node_modules/@types",
            "packages/koa/node_modules/@types",
            "sample/node_modules/@types"
        ],
        "lib": ["es6", "dom"]
    },
    "exclude": [
        "node_modules",
        "packages/core/node_modules",
        "packages/express/node_modules",
        "packages/koa/node_modules",
        "sample/node_modules",
        "build",
        "publish"
    ],
    "filesGlob": [
        "src/**/*.ts",
        "node_modules/@types/**/*.d.ts"
    ]
}